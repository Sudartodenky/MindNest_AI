{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",

    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["../node_modules"]
}
